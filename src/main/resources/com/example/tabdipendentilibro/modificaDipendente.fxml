<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<VBox prefHeight="250" prefWidth="300" spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.tabdipendentilibro.ModificaDipendenteController">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
    <children>

        <GridPane vgap="10" hgap="10">

            <children>
                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="campoNome" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Cognome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="campoCognome" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Codice Fiscale:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="campoCodiceFiscale" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="età:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="campoEtà" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>

        <Button text="Salva modifiche" onMousePressed="#handleSalvaModifiche" />
        <Label text="${controller.messaggioValidazione}" />
    </children>
</VBox>
